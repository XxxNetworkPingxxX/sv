    loadstring(game:HttpGet("https://raw.githubusercontent.com/nothubbb/Ink-game-/refs/heads/main/Inkgame.lua"))()
end)

local Tab4 = Window:NewTab("通用")
local Section4 = Tab4:NewSection("通用功能区")
Section4:NewButton("飞行", "开启飞行功能", function()
    loadstring("\108\111\97\100\115\116\114\105\110\103\40\103\97\109\101\58\72\116\116\112\71\101\116\40\34\104\116\116\112\115\58\47\47\112\97\115\116\101\98\105\110\46\99\111\109\47\114\97\119\47\90\66\122\99\84\109\49\102\34\41\41\40\41\10")()
end)

local CloseTab = Window:NewTab("关闭UI")
local CloseSection = CloseTab:NewSection("点击关闭")
CloseSection:NewButton("关闭 SV 脚本中心", "点击后关闭并显示通知", function()
    CreateCloseNotification()
    local coreGui = game:GetService("CoreGui")
    local kavoWindow = coreGui:FindFirstChild("KavoWindow")
    if kavoWindow then
        kavoWindow:Destroy()
    end
end)

local function CreateRightWindow(tabName)
    local RightWindow = Library.CreateLib("", AllGrayTheme)
    RightWindow.Frame.Position = UDim2.new(0.6, 0, 0.2, 0)
    RightWindow.Frame.Size = UDim2.new(0, 350, 0, 400)
    RightWindow.Frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15) -- 右侧窗口背景深灰

    for _, child in pairs(RightWindow.Frame:GetChildren()) do
        if child.Name == "Title" or child.Name == "Header" or child:IsA("TextLabel") and child.Position.Y.Scale < 0.1 then
            child:Destroy()
        end
    end

    local contentFrame = RightWindow.Frame:FindFirstChildOfClass("ScrollingFrame")
    if contentFrame then
        contentFrame.Position = UDim2.new(0, 0, 0, 0)
        contentFrame.Size = UDim2.new(1, 0, 1, 0)
        contentFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15) -- 滚动框背景深灰
    end

    local MainSection = RightWindow:NewSection(tabName .. "功能")
    if tabName == "门模式" then
        MainSection:NewButton("模式初始化", "初始化配置", function()
            print("门模式初始化触发")
        end)
    end

    local CloseSection = RightWindow:NewSection("控制")
    CloseSection:NewButton("关闭页面", "关闭窗口", function()
        RightWindow.Frame:Destroy()
    end)
    return RightWindow
end

Tab.Frame.MouseButton1Click:Connect(function() CreateRightWindow("门模式") end)
Tab2.Frame.MouseButton1Click:Connect(function() CreateRightWindow("门脚本") end)
Tab3.Frame.MouseButton1Click:Connect(function() CreateRightWindow("被遗弃") end)
  Tab4.Frame.MouseButton1Click:Connect(function() CreateRightWindow("通用") end)
