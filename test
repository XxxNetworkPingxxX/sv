local function CreateStartupNotification()
    local PlayerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    local notifyGui = Instance.new("ScreenGui")
    notifyGui.Name = "StartupNotify"
    notifyGui.Parent = PlayerGui
    notifyGui.DisplayOrder = 999

    local notifyFrame = Instance.new("Frame")
    notifyFrame.Size = UDim2.new(0, 280, 0, 80)
    notifyFrame.Position = UDim2.new(1, -290, 1, -90)
    notifyFrame.BackgroundColor3 = Color3.new(0, 0, 0)
    notifyFrame.BorderSizePixel = 0
    notifyFrame.Parent = notifyGui

    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, 0, 0, 25)
    titleLabel.Position = UDim2.new(0, 10, 0, 5)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = "正在启动 SV 脚本中心 V1"
    titleLabel.TextColor3 = Color3.new(1, 1, 1)
    titleLabel.TextSize = 14
    titleLabel.Parent = notifyFrame

    local contentLabel = Instance.new("TextLabel")
    contentLabel.Size = UDim2.new(1, 0, 0, 25)
    contentLabel.Position = UDim2.new(0, 10, 0, 30)
    contentLabel.BackgroundTransparency = 1
    contentLabel.Text = "欢迎使用 SV 脚本中心"
    contentLabel.TextColor3 = Color3.new(1, 1, 1)
    contentLabel.TextSize = 12
    contentLabel.Parent = notifyFrame

    local progressBar = Instance.new("Frame")
    progressBar.Size = UDim2.new(1, -20, 0, 8)
    progressBar.Position = UDim2.new(0, 10, 0, 55)
    progressBar.BackgroundColor3 = Color3.new(20, 20, 20)
    progressBar.BorderSizePixel = 0
    progressBar.Parent = notifyFrame

    local progressFill = Instance.new("Frame")
    progressFill.Size = UDim2.new(1, 0, 1, 0)
    progressFill.BackgroundColor3 = Color3.new(0.6, 0.2, 0.8)
    progressFill.BorderSizePixel = 0
    progressFill.Parent = progressBar

    for i = 100, 0, -1 do
        progressFill.Size = UDim2.new(i/100, 0, 1, 0)
        task.wait(0.03)
    end
    notifyGui:Destroy()
end

local function CreateCloseNotification()
    local PlayerGui = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    local notifyGui = Instance.new("ScreenGui")
    notifyGui.Name = "CloseNotify"
    notifyGui.Parent = PlayerGui
    notifyGui.DisplayOrder = 999

    local notifyFrame = Instance.new("Frame")
    notifyFrame.Size = UDim2.new(0, 280, 0, 80)
    notifyFrame.Position = UDim2.new(1, -290, 1, -90)
    notifyFrame.BackgroundColor3 = Color3.new(0, 0, 0)
    notifyFrame.BorderSizePixel = 0
    notifyFrame.Parent = notifyGui

    local titleLabel = Instance.new("TextLabel")
    titleLabel.Size = UDim2.new(1, 0, 0, 25)
    titleLabel.Position = UDim2.new(0, 10, 0, 5)
    titleLabel.BackgroundTransparency = 1
    titleLabel.Text = "已关闭 SV 脚本中心 UI"
    titleLabel.TextColor3 = Color3.new(1, 1, 1)
    titleLabel.TextSize = 14
    titleLabel.Parent = notifyFrame

    local progressBar = Instance.new("Frame")
    progressBar.Size = UDim2.new(1, -20, 0, 8)
    progressBar.Position = UDim2.new(0, 10, 0, 55)
    progressBar.BackgroundColor3 = Color3.new(20, 20, 20)
    progressBar.BorderSizePixel = 0
    progressBar.Parent = notifyFrame

    local progressFill = Instance.new("Frame")
    progressFill.Size = UDim2.new(1, 0, 1, 0)
    progressFill.BackgroundColor3 = Color3.new(0.6, 0.2, 0.8)
    progressFill.BorderSizePixel = 0
    progressFill.Parent = progressBar

    task.wait(2)
    notifyGui:Destroy()
end

task.spawn(CreateStartupNotification)
task.wait(3)

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/ZeianRussell/Kavo-UI-Library/main/Movable.source.lua"))()

-- 修改为黑灰色主题
local AllGrayTheme = {
    SchemeColor = Color3.fromRGB(30, 30, 30),      -- 深灰主题色
    Background = Color3.fromRGB(15, 15, 15),       -- 界面背景深灰
    Header = Color3.fromRGB(40, 40, 40),           -- 头部浅深灰
    TextColor = Color3.fromRGB(220, 220, 220),     -- 浅灰文字（保证可读性）
    ElementColor = Color3.fromRGB(50, 50, 50)      -- 按钮等元素中灰
}

local Window = Library.CreateLib("SV 脚本中心(缝合) V1", AllGrayTheme)

local Tab = Window:NewTab("门模式")
local Section = Tab:NewSection("MODE DOORS")
Section:NewButton("疯狂模式", "ButtonInfo",function()
    print("Executed Mode")
    loadstring(game:HttpGet('https://pastebin.com/raw/AgEtQui3'))()
end)
Section:NewButton("硬核模式V5", "ButtonInfo", function()
    print("Executed Mode")
    loadstring(game:HttpGet("https://gist.githubusercontent.com/Maxey1950/5f324f436b832e7aa8b1c4625dfa6106/raw/eb42e40d80fdf9228a93504886de882aba68fb00/gistfile1.txt",true))()
end)
Section:NewButton("碎片模式V4", "Have Fun!", function()
    loadstring(game:HttpGet("https://glot.io/snippets/gpw1ypnl5o/raw/main.lua"))()
end)
Section:NewButton("无尽之门", "Have Fun!", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/munciseek/Scriptmode/mode/Endless"))()
end)
Section:NewButton("不可能模式V1.8A", "Have Fun!", function()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/Ukazix/impossible-mode/main/Protected_79.lua.txt'))()
end)

local Tab2 = Window:NewTab("门脚本")
local Section2 = Tab2:NewSection("门脚本功能区")
Section2:NewButton("xa hub", "执行脚本", function()
    loadstring(game:HttpGet("\104\116\116\112\115\58\47\47\112\97\115\116\101\98\105\110\46\99\111\109\47\114\97\119\47\54\53\84\119\84\56\106\97"))()
end)
Section2:NewButton("msdoors", "执行脚本", function()
    loadstring(game:HttpGet("https://www.msdoors.xyz/script"))()
end)
Section2:NewButton("ms hub", "执行脚本", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/atnew2025/Chinese-scripts/refs/heads/main/mshax(prohax).txt"))()
end)
Section2:NewButton("xk hub(doors)", "执行脚本", function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/DevSloPo/Main/refs/heads/main/DOORS"))()
end)

local Tab3 = Window:NewTab("被遗弃")
